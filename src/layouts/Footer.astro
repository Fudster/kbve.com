---
import Socials from '@w/Socials.astro';
---

<section class="w-full py-8 relative mt-16 border-t">
	<div class="max-w-screen-xl px-4 mx-auto">
		<ul
			class="flex flex-wrap justify-between max-w-screen-md mx-auto text-lg font-light">
			<li class="my-2">
				<a
					class="text-secondary hover:text-primary duration-200"
					href="/support">
					Support
				</a>
			</li>
			<li class="my-2">
				<a
					class="text-secondary hover:text-primary duration-200"
					href="/register">
					Register
				</a>
			</li>
			<!-- [LEGAL] - [START] -->
			<li class="my-2">
				<a
					class="text-secondary hover:text-primary duration-200"
					href="/legal/tos/">
					Terms of Service
				</a>
			</li>
			<li class="my-2">
				<a
					class="text-secondary hover:text-primary duration-200"
					href="/legal/privacy/">
					Privacy Policy
				</a>
			</li>
			<li class="my-2">
				<a
					class="text-secondary hover:text-primary duration-200"
					href="/legal/eula/">
