let leftURL = '';
let rightURL = '';

if (content.sceneleft && content.sceneright) {
	leftURL = content.sceneleft;
	rightURL = content.sceneright;
}
---

<main class="">
	<!-- Removed overflow-y-auto -->
	<article
		class="grow relative overflow-hidden overscroll-y-none flex flex-col h-screen m-0"
	>
		<!-- [SCENE]    ->  [BG] -->
		<div
			class={`relative bg-cover overflow-hidden order-1 h-full ${content.effect}`}
			style={{ backgroundImage: `url(${content.img})` }}
		>
			
			<slot />
		
		</div>

		<div class="h-1/6 flex order-4 border border-indigo-500/[.5]">
			<a href={leftURL} rel="prefetch" class="w-1/2">
				<Lottie
					json="/assets/json/lottie/left.json"
					styler="flex-none h-16 lg:h-32"
				/>
				<!-- <i class="fa-light fa-plus-large"></i> -->
			</a>

			<a href={rightURL} rel="prefetch" class="w-1/2">
				<Lottie
					json="/assets/json/lottie/right.json"
					styler="flex-none h-16 lg:h-32"
				/>
				<!-- <i class="fa-light fa-arrow-right-long"></i> -->
			</a>
		</div>
	</article>
</main>
