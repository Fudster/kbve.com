---
import SubMenu from '@w/SubMenu.astro'; //<!--! [S]     -> SubMenu.astro
import SearchBar from '@tools/Search/SearchBar.astro';
import ReadMore from './ReadMore.astro';
---

<div class="flex flex-wrap -mx-3">
	<div class="w-full px-3">
		<div
			class="relative flex flex-col min-w-0 break-words bg-offset shadow-soft-xl rounded-2xl bg-clip-border"
		>
			<div class="flex-auto p-4">
				<div class="flex flex-wrap">
					<div class="rounded-lg shadow">
						<div class="p-5 justify-center items-center">
							<SubMenu />
						</div>

						<div class="p-5 justify-center items-center">
							<SearchBar />
						</div>

						<div class="p-5">
							<a href="/journal/">
								<h5 class="mb-2 text-2xl font-bold tracking-tight default-text">
									Noteworthy concepts for 2023
								</h5>
							</a>
							<p class="mb-3 font-normal default-text">
								Here are the recent updates for 2023, in no specific
								chronological order.
							</p>
							<ReadMore link="/journal/" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
