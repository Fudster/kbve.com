---

const { content } = Astro.props;

---

<div class="bg-[#1c033c]/[.54] flex">
    <div class="container grid grid-cols-12 mx-auto">
        <div
            class="bg-no-repeat bg-cover col-span-full lg:col-span-4"
            style={{ backgroundImage: `url(${content.img})` }}>
        </div>
        <div
            class="flex flex-col p-6 col-span-full row-span-full lg:col-span-8 lg:p-10">
            <div class="flex justify-start">
                <div
                    class="px-2 py-1 text-xs rounded-full ">
                    {
                        content.tags.slice(0, 3).map((tags) => (
                            <a
                                rel="noopener noreferrer"
                                href={`/t/${tags}`}
                                class="inline-block text-2xl font-semibold sm:text-3xl">
                                <span class="p-2 m-1 text-xs rounded-full bg-orange-500">
                                    #{tags}
                                </span>
                            </a>
                        ))
                    }
                </div>
            </div>
            <h1 class="text-3xl font-semibold">{content.title}</h1>
            <p class="flex-1 pt-2">
                {content.description}
            </p>

            <div class="flex items-center justify-between pt-2">
                <div class="flex space-x-2">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="w-5 h-5 ">
                        <path
                            fill-rule="evenodd"
                            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z"
                            clip-rule="evenodd"></path>
                    </svg>
                    <span class="self-center text-sm"
                        >by {content.author || ' Anon'}</span
                    >
                </div>
                <span class="text-xs"> 3 min read</span>
            </div>
        </div>
    </div>
</div>