---
const { title, id } = Astro.props;
---

<section {id} class="flex flex-col items-center space-y-4 scroll-mt-24 mt-8">
  <div class="flex flex-col items-center bg-offset p-8 rounded-lg shadow-2xl">
    <h2
      class="text-6xl font-extrabold tracking-tight text-center gradient-text"
    >
      {title}
    </h2>
  </div>
  <slot />
</section>
