const { src, description } = Astro.props;
---

<div class={!description ? "pb2" : "pb1"}>
  <div class="grow">
    <script
        is:inline
        src={`/embed/github/embed.js?target=https://github.com/kbve/kbve.com/blob/main/public/${src}&style=shades-of-purple&showBorder=on&showLineNumbers=on&showFileMeta=on&showCopy=on`}
    ></script>
  </div>
  <div class="tar">
    <span class="f-d3 gradient-text">{description}</span>
  </div>
</div>
