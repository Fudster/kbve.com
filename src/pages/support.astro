---
//<!--*		[IMPORT]
import N from '@n/N.astro';
import KBVE from '@l/KBVE.astro';
import Menu from '@l/Menu.astro';
import Calendly from '@w/Calendly.astro';

//<!--*		[DATA]
const { content } = Astro.props;
let title = 'KBVE Support & Contact Page';
let description =
	'Contact our support team directly through a live chat, ticket or schedule an appointment through our calendar. Furthermore, we can be reached via Discord, Twitch and Email, but using the ticket system is the best option.';
---

<KBVE title={title} description={description}>
	<Menu>
		<section class="dark:bg-gray-800 dark:text-gray-100">
			<div
				class="container flex flex-col justify-center px-4 py-8 mx-auto md:p-8"
			>
				<h2 class="text-2xl font-semibold sm:text-4xl gradient-text">
					Thanks for contacting/visting the KBVE support page!
				</h2>
				<p class="mt-4 mb-8">Our Contact Options Below</p>
				<div class="space-y-4">
					<details class="w-full border rounded-lg bg-offset">
						<summary
							class="px-4 py-6 focus:outline-none focus-visible:ring-orange-400"
							>Schedule Appointment Via Calendarly</summary
						>
						<p class="px-4 py-6 pt-0 ml-4 -mt-4">
							Pick a time slot within our calendar below!
						</p>
						<Calendly
							user="kbve"
							tail="calendly-inline-widget justify-center overflow-hidden aspect-w-16 aspect-h-9"
						/>
					</details>
					<details class="w-full border rounded-lg bg-offset">
						<summary
							class="px-4 py-6 focus:outline-none focus-visible:ring-orange-400"
							>Discover Our Socials</summary
						>
						<p class="px-4 py-6 pt-0 ml-4 -mt-4">
							<N ns="controller" template="socials" />
						</p>
					</details>
					<details class="w-full border rounded-lg bg-offset">
						<summary
							class="px-4 py-6 focus:outline-none focus-visible:ring-orange-400"
							>Submit Ticket Via Form</summary
						>

						<div class="aspect-w-16 aspect-h-9">
							<iframe
								src="https://share.hsforms.com/1C5_zNMjxT_OEPJ0LajOxtAcez55"
								allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
								class="h-screen z-50"></iframe>
						</div>
					</details>
				</div>
			</div>
		</section>

		<div
			class="grid grid-cols-1 gap-8 px-8 py-16 mx-auto rounded-lg md:grid-cols-2 md:px-12 lg:px-16 xl:px-32"
		>
			<div class="flex flex-col justify-between">
				<div class="space-y-2">
					<h2
						class="text-4xl font-bold leading-tight lg:text-5xl text-secondary p-4"
					>
						Let's talk!
					</h2>
					<div class="bg-offset p-4">
						Schedule a Meeting with us via the calendar or open a support ticket
					</div>
				</div>
				<N
					ns="controller"
					template="lottie"
					data="https://assets4.lottiefiles.com/private_files/lf30_3lflolyo.json"
					className="relative w-256 p-4"
				/>
			</div>
			<form novalidate="" class="space-y-6 ng-untouched ng-pristine ng-valid">
				<div>
					<label for="name" class="text-sm uppercase"
						>Full Name or Username</label
					>
					<input
						id="name"
						type="text"
						class="w-full p-3 rounded bg-offset focus-visible:ring-orange-400"
					/>
				</div>
				<div>
					<label for="email" class="text-sm uppercase">Email</label>
					<input
						id="email"
						type="email"
						class="w-full p-3 rounded bg-offset focus-visible:ring-orange-400"
					/>
				</div>
				<div>
					<label for="message" class="text-sm uppercase">Message</label>
					<textarea id="message" rows="3" class="w-full p-3 rounded bg-offset"
					></textarea>
				</div>
				<button
					type="submit"
					class="bg-primary w-full p-3 text-sm font-bold tracking-wide uppercase rounded"
					disabled={true}
				>
					Send Message
				</button>
			</form>
		</div>

		<N ns="controller" template="livechat" />
	</Menu>
</KBVE>
