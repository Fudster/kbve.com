---
import Core from "@l/theme/core.astro";					///	[IMPORT] -> [CORE]
import SWUP from "@l/theme/swup.astro";					///	[SWUP]

import Discord from '@c/SocialMedia/Discord';           /// Import Discord
import Lottie from '@c/Element/Lottie/Lottie.astro';
---
<Core title="KBVE Discord" description="Check out our amazing community of gamers and programmers! Join our Discord!">
	<SWUP>
	<div class="px-4 py-12 space-y-8">
		<style>	
			.kbvehero {
				padding: 8rem;
				display: flex;
				background-color: var(--t-fg);
				background-repeat: no-repeat;
				background-size: cover;
				min-height: 25vw;
				color: white;
				flex-direction: column;
				align-items: center;
				justify-content: center;
			}
			.kbvetext {
				text-shadow:
						3px 3px 0 #000,
						-1px -1px 0 #000,  
						1px -1px 0 #000,
						-1px 1px 0 #000,
						1px 1px 0 #000;
			}
		</style>
		<div style={{ backgroundImage: `url(https://images.unsplash.com/photo-1614680376739-414d95ff43df)` }} class="kbvehero rounded-full shadow-2xl hover:skew-y-6 transform-gpu duration-300">
						<h1 class="title text-9xl kbvetext">Discord Community</h1>
		</div>
	</div>

	<div class="px-4 py-8 space-y-4">
		<div class="shadow-2xl p-4 bg-offset text-center rounded-3xl ">
			<Lottie json="https://assets1.lottiefiles.com/private_files/lf30_mAfXxk.json" width="320px" />
		</div>
	</div>

	<section class="dark:bg-gray-800 dark:text-gray-100">
		<div class="container flex flex-col justify-center p-6 mx-auto sm:py-12 lg:py-24 lg:flex-row lg:justify-between">
			<div class="flex flex-col justify-center p-6 text-center rounded-2xl lg:max-w-md xl:max-w-lg lg:text-left bg-offset">
				<h1 class="text-5xl font-bold leading-none sm:text-6xl">Join our
					<span class="dark:text-orange-400">beauteous</span> Discord server!
				</h1>
				<p class="mt-6 mb-8 text-lg sm:mb-12">Experience the joy of the KBVE community with shit ton on memes, convos and more!
					<br class="hidden md:inline lg:hidden">Join today to start your journey with the KBVE community. 
				</p>
				<div class="flex flex-col space-y-4 sm:items-center sm:justify-center sm:flex-row sm:space-y-0 sm:space-x-4 lg:justify-start">
					<a rel="noopener noreferrer" href="#" class="px-8 py-3 text-lg font-semibold rounded dark:bg-orange-400 dark:text-gray-900">Hmmm</a>
					<a rel="noopener noreferrer" href="#" class="px-8 py-3 text-lg font-semibold border rounded dark:border-gray-100 rotate-0 hover:rotate-180 transition ease-in-out">Definitely </a>
				</div>
			</div>
			<div class="flex items-center justify-center  p-6 mt-8">
				<div class="shadow-2xl p-4 bg-offset rounded-3xl">
					<Discord client:load width="100%" height="550" />
				</div>
			</div>
		</div>
	</section>
	
		
	<div class="space-x-4 space-y-4">
			<div class="hover:shadow-2xl bg-offset hover:rounded-2xl hover:scale-75 w-screen transform-gpu duration-500 ease-in-out">
				<Lottie json="https://assets9.lottiefiles.com/packages/lf20_nivsnvgo.json"  width="300px" />
			</div>
	</div>
	</SWUP>
</Core>