---
//?     [SECURITY] : Render Collection of {security}
///     [IMPORTS]
import N from "@n/N.astro"; ///     [Astro]:{namespace}
import KBVE from '@l/KBVE.astro';
import Menu from '@l/Menu.astro';
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const security = await getCollection("security");
  return security.map((entry) => ({
    params: {
      id: entry.slug,
    },
    props: {
      entry,
    },
  }));
}
const { id } = Astro.params;
const { entry } = Astro.props;
const { Content, headings, injectedFrontmatter } = await entry.render();
---

<KBVE title={entry.data.title} description={entry.data.description}>
  <Menu>
  <Content />
</Menu>
</KBVE>
