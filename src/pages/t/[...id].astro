    export async function getStaticPaths() {
	const tags = await getCollection('tags', ({ data }) => {
		return data.draft !== true || data.notes !== false
	});
	return tags.map((entry) => ({
		params: {
			id: entry.slug,
		},
		props: {
			entry,
		},
	}));
}
