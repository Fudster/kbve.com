import N from "@n/N.astro"; //<!--*     [Astro]:{namespace}
import { getCollection } from "astro:content"; //<!--*     [Astro]:{Content}
//<!--*     [Function]
//<!--?     [f()]:getStaticPaths()->getCollections() - Returns the News collections
export async function getStaticPaths() {
  const project = await getCollection("news");
  return project.map((entry) => ({
    params: {
      id: entry.slug,
    },
    props: {
      entry,
    },
  }));
}
